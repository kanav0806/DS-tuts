#include <iostream>
using namespace std;
#define MAX 5   // keep small for demo

class Stack {
    int arr[MAX];
    int top;
public:
    Stack() { top = -1; }

    void push(int x) {
        if (isFull()) cout << "Stack Overflow!\n";
        else {
            arr[++top] = x;
            cout << x << " pushed.\n";
        }
    }
    void pop() {
        if (isEmpty()) cout << "Stack Underflow!\n";
        else cout << arr[top--] << " popped.\n";
    }
    bool isEmpty() { return top == -1; }
    bool isFull() { return top == MAX - 1; }
    void display() {
        if (isEmpty()) cout << "Stack empty\n";
        else {
            cout << "Stack: ";
            for (int i = top; i >= 0; i--) cout << arr[i] << " ";
            cout << endl;
        }
    }
    void peek() {
        if (isEmpty()) cout << "Stack empty\n";
        else cout << "Top element: " << arr[top] << endl;
    }
};

int main() {
    Stack s;
    s.push(10);
    s.push(20);
    s.push(30);
    s.display();
    s.peek();
    s.pop();
    s.display();
    cout << "IsEmpty: " << (s.isEmpty() ? "Yes" : "No") << endl;
    cout << "IsFull: " << (s.isFull() ? "Yes" : "No") << endl;
}
