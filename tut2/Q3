#include <iostream>
using namespace std;

int findMissingLinear(int arr[], int n) {
int total = (n + 1) * (n + 2) / 2; // sum of 1 to n+1
for (int i = 0; i < n; i++) {
total -= arr[i];
}
return total;
}

int main() {
int arr[] = {1, 2, 3, 5, 6}; // missing 4
int n = sizeof(arr) / sizeof(arr[0]);
cout << "Missing Number (Linear): " << findMissingLinear(arr, n);
return 0;
}
