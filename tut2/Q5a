#include <iostream>
using namespace std;

int main() {
int n = 4; // size of matrix
int compact[n] = {1, 5, 9, 7}; // only diagonal stored

cout << "Compact storage (only diagonal elements): ";
for (int i = 0; i < n; i++) cout << compact[i] << " ";
cout << "\n\nFull matrix:\n";

for (int i = 0; i < n; i++) {
for (int j = 0; j < n; j++) {
if (i == j) cout << compact[i] << " ";
else cout << 0 << " ";
}
cout << "\n";
}
return 0;
}
